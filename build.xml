<project name="ftpd" default="compile" basedir=".">

  <property name="src.dir" value="src"/>
  <property name="build.sysclasspath" value="last"/>
  <property name="tst-dir" location="tests" />

  <target name="clean">
    <delete dir="classes"/>
    <delete dir="doc"/>
  </target>

  <target name="compile">
    <mkdir dir="classes"/>
    <javac srcdir="src" destdir="classes">
    </javac>
  </target>

  <target name="doc">
    <javadoc packagenames="plugins.*,gui.*,extensions.*" sourcepath="${src.dir}"
             destdir="doc" version="true" windowtitle="Plugin">
    </javadoc>
    <echo message="java doc has been generated!" />
  </target>


  <target name="run" depends="compile">
    <java classname="ftpd.Serveur" fork="true">
    </java>
  </target>

</project>
